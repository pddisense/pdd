common --color=yes
build --strategy=Scalac=worker
test --strategy=Scalac=worker
build --workspace_status_command=tools/print-workspace-status.sh

# Ignore problematic directories (because they may contain files named build/BUILD, which messes
# up with Bazel).
build --deleted_packages .git,3rdparty/node_modules/rxjs/src

###############################################
## Travis continuous integration configuration.
## Run with: bazel test --config=ci
common:ci --color=no
common:ci --nokeep_state_after_build
build:ci --repository_cache="$HOME/.bazel_repository_cache"
build:ci --verbose_failures
build:ci --sandbox_debug
build:ci --spawn_strategy=standalone
build:ci --genrule_strategy=standalone
build:ci --noshow_progress
build:ci --noshow_loading_progress
test:ci --test_strategy=standalone
test:ci --test_output=errors

# Build for production environment.
build:ci --define env=production
test:ci --define env=production

# Limit resources usage.
build:ci --local_resources=400,1,1.0
